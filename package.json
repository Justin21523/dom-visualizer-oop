{
  "name": "dom-visualizer-oop",
  "version": "1.0.0",
  "description": "Interactive JavaScript DOM & Event Learning Platform",
  "type": "module",
  "main": "src/main.js",
  "scripts": {
    "dev": "vite --host --port 3000",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint": "eslint src --ext .js,.ts",
    "lint:fix": "eslint src --ext .js,.ts --fix",
    "format": "prettier --write \"src/**/*.{js,ts,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,css,md}\"",
    "type-check": "tsc --noEmit",
    "analyze": "vite-bundle-analyzer dist/stats.html",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "docs:generate": "node scripts/generate-docs.js",
    "prepare": "husky install"
  },
  "keywords": [
    "javascript",
    "dom",
    "education",
    "visualization",
    "learning-platform",
    "browser-apis",
    "oop",
    "interactive"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@storybook/addon-essentials": "^7.6.17",
    "@storybook/addon-interactions": "^7.6.17",
    "@storybook/addon-links": "^7.6.17",
    "@storybook/blocks": "^7.6.17",
    "@storybook/html": "^7.6.17",
    "@storybook/html-vite": "^7.6.17",
    "@storybook/testing-library": "^0.2.2",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitest/coverage-v8": "^0.34.0",
    "@vitest/ui": "^0.34.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsdoc": "^46.8.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "husky": "^8.0.3",
    "jsdom": "^23.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "storybook": "^7.6.17",
    "typescript": "^5.2.0",
    "vite": "^4.5.0",
    "vite-bundle-analyzer": "^0.7.0",
    "vitest": "^0.34.0"
  },
  "dependencies": {
    "lodash-es": "^4.17.21"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "Chrome >= 80",
    "Firefox >= 75",
    "Safari >= 13",
    "Edge >= 80"
  ],
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,md,json}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Justin21523/dom-visualizer-oop.git"
  },
  "bugs": {
    "url": "https://github.com/Justin21523/dom-visualizer-oop/issues"
  },
  "homepage": "https://github.com/Justin21523/dom-visualizer-oop#readme"
}
